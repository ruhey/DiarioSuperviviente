<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blancoVerdoso"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.aecc.superdiary.presentation.view.activity.BienvenidaActivity">

    <ImageView
        android:id="@+id/imagenEntrada"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/aecc_logo" />

    <Button
        android:id="@+id/botonEnMarcha"
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonCalendario"
        android:layout_centerHorizontal="true"
        android:background="@color/verdeAecc"
        android:text="@string/enmarcha" />

    <Button
        android:id="@+id/botonCalendario"
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonMisCitas"
        android:layout_centerHorizontal="true"
        android:background="@color/verdeAecc"
        android:text="@string/calendario" />

    <Button
        android:id="@+id/botonMisCitas"
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonMisPersonas"
        android:layout_centerHorizontal="true"
        android:background="@color/verdeAecc"
        android:text="@string/miscitas" />

    <Button
        android:id="@+id/botonMisPersonas"
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonOtros"
        android:layout_centerHorizontal="true"
        android:background="@color/verdeAecc"
        android:text="@string/mispersonas" />

    <Button
        android:id="@+id/botonOtros"
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/verdeAecc"
        android:text="@string/otros" />


</RelativeLayout>
